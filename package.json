{
  "name": "viraler-ia",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Aplicaci√≥n para transcribir contenido de videos con IA",
  "scripts": {
    "dev:frontend": "vite --host 0.0.0.0",
    "dev:backend": "nodemon server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "npx vite build",
    "start": "node server.js",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "migrate": "node api/database/migrateJsonToSQLite.js",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up",
    "docker:start:detached": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:bash": "docker-compose exec viraler-ia bash",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.90.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "sqlite3": "^5.1.7",
    "vite": "^6.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^6.2.3"
  }
}
