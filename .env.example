# API Key de OpenAI (requerida)
OPENAI_API_KEY=

# API Key de Anthropic (requerida para generación de guiones)
ANTHROPIC_API_KEY=

# Puerto del servidor (opcional, por defecto 3000)
PORT=3000

# Modo de entorno (desarrollo/producción)
NODE_ENV=development

# Ruta a FFmpeg (opcional, si no está en el PATH del sistema)
# FFMPEG_PATH=/ruta/a/ffmpeg

# Variables para Docker
# Host para Vite en desarrollo dentro de Docker
VITE_HOST=0.0.0.0

# Variables para despliegue en Render
# INSTAGRAM_COOKIES=contenido_del_archivo_cookies_txt

# Información de depuración (opcional)
# DEBUG=true
